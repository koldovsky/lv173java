<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://java.sun.com/xml/ns/persistence 
http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
version="2.0">
  <persistence-unit name="persistenceUnit"
  transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <jta-data-source>java:/DefaultDS</jta-data-source>
    <class>com.softserveinc.ita.redplatform.common.entity.Address</class>
    <class>com.softserveinc.ita.redplatform.common.entity.AdminUser</class>
    <class>com.softserveinc.ita.redplatform.common.entity.BaseEntity</class>
    <class>com.softserveinc.ita.redplatform.common.entity.CustomerUser</class>
    <class>com.softserveinc.ita.redplatform.common.entity.CurrencyRate</class>
    <class>com.softserveinc.ita.redplatform.common.entity.Installment</class>
    <class>com.softserveinc.ita.redplatform.common.entity.CustomerUser</class>
    <class>com.softserveinc.ita.redplatform.common.entity.Order</class>
    <class>com.softserveinc.ita.redplatform.common.entity.Payment</class>
    <class>com.softserveinc.ita.redplatform.common.entity.RealEstateDevelopmentAgency</class>
    <class>com.softserveinc.ita.redplatform.common.entity.RealEstateDevelopmentAdminUser</class>
    <class>com.softserveinc.ita.redplatform.common.entity.User</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>

    <properties>
      <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
      <property name="hibernate.show_sql" value="true" />
      <property name="hibernate.current_session_context_class" value="thread" />
      <property name="hibernate.hbm2ddl.auto" value="update" />
      <property name="hibernate.enable_lazy_load_no_trans" value="true"/>
    </properties>
  </persistence-unit>
</persistence>
